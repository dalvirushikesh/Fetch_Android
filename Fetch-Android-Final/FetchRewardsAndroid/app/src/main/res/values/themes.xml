<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fetch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Background color for the app. -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Customize button colors. -->
        <item name="colorButtonNormal">@color/purple_500</item>
        <item name="android:colorAccent">@color/teal_200</item>

        <!-- Text colors. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/purple_200</item>

        <!-- Customize toolbar. -->
        <item name="toolbarStyle">@style/Widget.Fetch.Toolbar</item>
    </style>

    <!-- Toolbar customization -->
    <style name="Widget.Fetch.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/purple_500</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/purple_200</item>
    </style>
</resources>
